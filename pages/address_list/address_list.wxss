/* pages/address_list/address_list.wxss */

page {
  background-color: #eeeeee;
  width: 100%;
  height: 100%;
}

.main_panel{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.address_list {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.address_list .address_item {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
}

.address_item .check_panel{
  display: flex;
  width: 45rpx;
  height: 125rpx;
  margin-right: -20rpx;
}


.check_panel .check_image{
  width: 45rpx;
  height: 45rpx;
}

.address_item .address_view {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin: 20rpx 0rpx;
  box-sizing:border-box;
}

.address_view .address_text {
  font-size: 32rpx;
  font-family: SimSun;
  margin: 5rpx 0rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}

.address_view .people_text {
  font-size: 28rpx;
  color: #666666;
}

.address_item .edit_view{
  width: 150rpx;
  display: flex;
  justify-content: flex-end;
  margin-right: 25rpx;
}

.edit_view .edit_image{
  width: 40rpx;
  height: 40rpx;
}

.line {
  width: 100%;
  height: 0.3rpx;
  background-color: #eeeeee;
  margin-left: 25rpx;
}
.add_address_view{
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add_address_image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
