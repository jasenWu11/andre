/* pages/home/home.wxss */

page{
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
}

.main_panel{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.title_panel{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 10rpx 25rpx 15rpx 25rpx;
  align-items: center;
  text-align: center;
  box-sizing: border-box;
  background-color: #ffffff;
}

.map_panel{
  width: 100%;
  flex: 1;
}

.title_panel .title_head_view{
  width: 150rpx;
  height: 45rpx;
  display: flex;
  justify-content: left;
}

.title_head_view .title_head{
  width: 30rpx;
  height: 30rpx;
}

.title_panel .title_text{
  color: #000000;
  font-size: 30rpx;
  font-weight: 500;
  flex: 1;
  font-style: oblique;
}

.title_panel .title_city{
  font-size: 24rpx;
  color: #666666;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 150rpx;
  justify-content: flex-end;
}

.title_city .city_image{
  width: 20rpx;
  height: 20rpx;
  margin-left: 15rpx;
}


.address_panel{
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 15rpx 25rpx;
  margin: 0rpx 20rpx 15rpx 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.address_panel .address_panel_title{
  text-align: center;
  color: #000000;
  font-size: 32rpx;
  font-weight: 500;
}

.address_panel .address_piece{
  width: 50rpx;
  height: 6rpx;
  background-color: #fcb634;
  margin: 8rpx 0rpx;
}

.address_panel .address_view{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.address_view .address_circle{
  width: 14rpx;
  height: 14rpx;
  background-color: #0078ff;
  border-radius: 7rpx;
}

.address_view .address_input{
  margin-left: 20rpx;
  flex: 1;
  min-height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #8b8b8b;
  font-size: 28rpx;
}

.address_input .address_text{
  color:#000000;
}

.address_input .phone_text{
  font-size: 24rpx;
  color:#acacac;
}

.address_view .address_choose{
  color: #66ccff;
  font-size: 27rpx;
}

.line {
  width: 100%;
  height: 0.6rpx;
  background-color: #acacac;
  margin: 20rpx 0rpx;
}

.address_view .address_rectangle{
  width: 14rpx;
  height: 14rpx;
  background-color: #666666;
}

.address_view .address_next_image{
  width: 20rpx;
  height: 20rpx;
}

.clear_address{
  width: 140rpx;
  height: 50rpx;
  background-color: #ffffff; 
  position:fixed;
  left:0;
  bottom:470rpx;
  border-radius: 0rpx 25rpx 25rpx 0rpx;
  padding: 0rpx 15rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
}

.clear_address .left_image{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}