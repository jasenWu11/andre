/* pages/rule/rule.wxss */
page{
  width: 100%;
  height: 100%;
}
.main_panel{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
}
.main_panel .row_text_panel{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}
.row_text_panel .title_text{
  flex: 1;
  color: #000000;
  font-size: 30rpx;
  display: flex;
  height: 40rpx;
  justify-content: flex-start;
}

.content_text_panel{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
  margin-top: -30rpx;
}

.desc_text{
  flex: 1;
  color: #888888;
  font-size: 24rpx;
  display: flex;
  height: 40rpx;
  justify-content: flex-start;
}

.price_text{
  height: 40rpx;
  color: #000000;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}