/* pages/affirm_order/affirm_order.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
}
.main_panel{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.map_panel{
  width: 100%;
  height: 400rpx;
}
.content_panel{
  width: 100%;
  flex: 1;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}
.bottom_panel{
  width: 100%;
  background-color: #ffffff;
  padding: 15rpx 20rpx 15rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #3e3e3e;
  font-size: 24rpx;
}
.bottom_text{
  display: flex;
  margin-left: 20rpx;
  align-items: baseline;
  flex: 1;
}
.bottom_panel .right_image{
  width: 24rpx;
  height: 24rpx;
}
.button_view{
  width: 280rpx;
  height: 80rpx;
  display: flex;
  background-color: #f9c349;
  justify-content: center;
  align-items: center;
  color: #000000;
  font-size: 30rpx;
}
.address_panel{
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 15rpx 25rpx;
  margin-bottom: 15rpx;
  box-sizing: border-box;
  align-items: center;
}

.address_panel .address_panel_title{
  text-align: center;
  color: #000000;
  font-size: 32rpx;
  font-weight: 500;
}

.address_panel .address_piece{
  width: 50rpx;
  height: 6rpx;
  background-color: #fcb634;
  margin: 8rpx 0rpx;
}

.address_panel .address_view{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.address_view .address_circle{
  width: 14rpx;
  height: 14rpx;
  background-color: #0078ff;
  border-radius: 7rpx;
}

.address_view .address_input{
  margin-left: 20rpx;
  flex: 1;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #8b8b8b;
  font-size: 28rpx;
}

.address_input .address_text{
  color:#000000;
}

.address_input .phone_text{
  font-size: 24rpx;
  color:#acacac;
}

.address_view .address_choose{
  color: #66ccff;
  font-size: 27rpx;
}

.line {
  width: 100%;
  height: 0.6rpx;
  background-color: #acacac;
  margin: 20rpx 0rpx;
}

.address_view .address_rectangle{
  width: 14rpx;
  height: 14rpx;
  background-color: #666666;
}

.address_view .address_next_image{
  width: 20rpx;
  height: 20rpx;
}

.address_panel .time_view{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 25rpx;
}

.time_view .address_next_image{
  width: 20rpx;
  height: 20rpx;
}

